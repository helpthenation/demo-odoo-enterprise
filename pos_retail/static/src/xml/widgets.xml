                    </td>
                    <td class="text-right">
                        <span class="price-tag text-right">
                            <t t-esc="widget.format_currency(product.list_price,'Product Price')"/>
                        </span>
                    </td>
                    <td class="text-right">
                        <span class="price-tag text-right">
                            <t t-esc="widget.format_currency(product.standard_price, 'Product Price') + '/' + widget.pos.units_by_id[product.uom_id[0]].name"/>
                        </span>
                    </td>
                    <t t-if="widget.pos.server_version == 10">
                        <td class="text-right">
                            <span class="price-tag text-right">
                                <t t-esc="widget.format_currency(widget.pos.get_price_with_tax(product, 1),'Product Price') + '/' + widget.pos.units_by_id[product.uom_id[0]].name"/>
                            </span>
                        </td>
                    </t>
                    <t t-if="widget.pos.server_version == 11">
                        <td class="text-right">
